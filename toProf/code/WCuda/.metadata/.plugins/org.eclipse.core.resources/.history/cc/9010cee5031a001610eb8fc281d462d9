#include <iostream>
#include "MathTools.h"

/*----------------------------------------------------------------------*\
|*			Declaration                     *|
\*---------------------------------------------------------------------*/
extern float computePi();

/*--------------------------------------*\
|*		Imported	    *|
\*-------------------------------------*/

/*--------------------------------------*\
|*		Public			*|
\*-------------------------------------*/

bool useSlice();

bool useSlice() {
  float piValue = computePi();

  std::cout << "PI = " << piValue << " (with slicing)" << std::endl;

  return abs(piValue - 3.141592653589793f) < 0.0001;

  return MathTools::isEquals(piValue, M_PI, 1e-4);
}

/*--------------------------------------*\
|*		Private			*|
\*-------------------------------------*/



/*----------------------------------------------------------------------*\
|*			Implementation                  *|
\*---------------------------------------------------------------------*/

/*--------------------------------------*\
|*		Public			*|
\*-------------------------------------*/



bool useSlice(void)
{
        cout << endl << "[Saucisson]" << endl;

        bool isOk = true;

        int n = INT_MAX/500;
        Saucisson saucisson(n);
        saucisson.process();

        cout << "saucisson pi: " << saucisson.getPi() << endl;

        isOk &= MathTools::isEquals(saucisson.getPi(), M_PI, 1e-3);

        return true;
}

/*--------------------------------------*\
|*		Private			*|
\*-------------------------------------*/

/*----------------------------------------------------------------------*\
|*			End	                    *|
\*---------------------------------------------------------------------*/

