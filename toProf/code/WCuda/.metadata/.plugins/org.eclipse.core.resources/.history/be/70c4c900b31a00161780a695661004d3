#include <iostream>
#include "MathTools.h"
#include "math.h"
#include "Chronos.h"

/*----------------------------------------------------------------------*\
|*			Declaration                     *|
\*---------------------------------------------------------------------*/
extern float computePi();

/*--------------------------------------*\
|*		Imported	    *|
\*-------------------------------------*/

/*--------------------------------------*\
|*		Public			*|
\*-------------------------------------*/

/*--------------------------------------*\
|*		Private			*|
\*-------------------------------------*/



/*----------------------------------------------------------------------*\
|*			Implementation                  *|
\*---------------------------------------------------------------------*/

/*--------------------------------------*\
|*		Public			*|
\*-------------------------------------*/
bool useSlice() {

    Chronos chrono;
    chrono.start();
    float piValue = computePi();
    double time = chrono.stop();

    std::cout << "slice pi: " << piValue << " | time: " << time << std::endl;

    return MathTools::isEquals(piValue, (float)M_PI, (float)1e-3);
}

/*--------------------------------------*\
|*		Private			*|
\*-------------------------------------*/

/*----------------------------------------------------------------------*\
|*			End	                    *|
\*---------------------------------------------------------------------*/

