#pragma once

#include "Indice1D.h"

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/
__device__ float calcPi(float x);

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/
__device__ float calcPi(float x)
    {
    return 4.0 / (float)(1 + x * x);
    }
/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/
