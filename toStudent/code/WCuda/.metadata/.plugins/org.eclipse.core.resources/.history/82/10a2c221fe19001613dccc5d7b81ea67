#pragma once

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

class CommunDevices
    {
 /*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/
    public:
	__device__ float calcPi(float x)
	    {
	return 4.0 / (float)(1 + x * x);
	    }

    };

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/
