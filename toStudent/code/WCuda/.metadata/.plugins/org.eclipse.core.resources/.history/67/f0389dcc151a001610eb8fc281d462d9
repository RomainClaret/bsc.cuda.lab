#include <iostream>
#include "MathTools.h"
#include "math.h"

/*----------------------------------------------------------------------*\
|*			Declaration                     *|
\*---------------------------------------------------------------------*/
extern float computePiMono();
extern float computePiMulti();

/*--------------------------------------*\
|*		Imported	    *|
\*-------------------------------------*/

/*--------------------------------------*\
|*		Public			*|
\*-------------------------------------*/

/*--------------------------------------*\
|*		Private			*|
\*-------------------------------------*/



/*----------------------------------------------------------------------*\
|*			Implementation                  *|
\*---------------------------------------------------------------------*/

/*--------------------------------------*\
|*		Public			*|
\*-------------------------------------*/
bool useMontecarloMono() {
  float piValue = computePiMono();

  std::cout << "montecarlo pi MONO: " << piValue << std::endl;

  return MathTools::isEquals(piValue, M_PI, 1e-3);
}


bool useMontecarloMulti() {
  float piValue = computePiMulti();

  std::cout << "montecarlo pi MULTI: " << piValue << std::endl;

  return MathTools::isEquals(piValue, (float)M_PI, (float)1e-3);
}

/*--------------------------------------*\
|*		Private			*|
\*-------------------------------------*/

/*----------------------------------------------------------------------*\
|*			End	                    *|
\*---------------------------------------------------------------------*/

