#include <iostream>
#include "MathTools.h"
#include "math.h"

/*----------------------------------------------------------------------*\
|*			Declaration                     *|
\*---------------------------------------------------------------------*/
extern float computePi(int max);

/*--------------------------------------*\
|*		Imported	    *|
\*-------------------------------------*/

/*--------------------------------------*\
|*		Public			*|
\*-------------------------------------*/

/*--------------------------------------*\
|*		Private			*|
\*-------------------------------------*/



/*----------------------------------------------------------------------*\
|*			Implementation                  *|
\*---------------------------------------------------------------------*/

/*--------------------------------------*\
|*		Public			*|
\*-------------------------------------*/

bool useSlice();

bool useSlice() {
  int max = 1e7;
  float piValue = computePi(max);

  std::cout << "hello" << std::endl;

  std::cout << "slice pi: " << piValue << std::endl;

  return MathTools::isEquals(piValue, M_PI, 1e-4);
}

/*--------------------------------------*\
|*		Private			*|
\*-------------------------------------*/

/*----------------------------------------------------------------------*\
|*			End	                    *|
\*---------------------------------------------------------------------*/

