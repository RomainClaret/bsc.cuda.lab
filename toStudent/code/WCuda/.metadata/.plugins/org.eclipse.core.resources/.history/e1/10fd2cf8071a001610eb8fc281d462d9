class CommunDevices
    {
 /*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/
    public:
	__device__ static float calcPi(float x)
	    {
	std::cout<<"Hello"<<std::endl;
	    return 4 / (1 + x * x);
	    }

    };

