#include <iostream>
#include "MathTools.h"
#include "math.h"

/*----------------------------------------------------------------------*\
|*			Declaration                     *|
\*---------------------------------------------------------------------*/
extern float computeMontecarloMono(int);

/*--------------------------------------*\
|*		Imported	    *|
\*-------------------------------------*/

/*--------------------------------------*\
|*		Public			*|
\*-------------------------------------*/

/*--------------------------------------*\
|*		Private			*|
\*-------------------------------------*/



/*----------------------------------------------------------------------*\
|*			Implementation                  *|
\*---------------------------------------------------------------------*/

/*--------------------------------------*\
|*		Public			*|
\*-------------------------------------*/
bool useMontecarloMono() {
  float piValue = computeMontecarloMono(15e8);

  std::cout << "montecarlo pi MONO: " << piValue << std::endl << std::endl;

  return MathTools::isEquals(piValue, (float)M_PI, (float)1e-3);
}

/*--------------------------------------*\
|*		Private			*|
\*-------------------------------------*/

/*----------------------------------------------------------------------*\
|*			End	                    *|
\*---------------------------------------------------------------------*/

